/**
char* reverse(const char* string) {
    if (string == NULL) {
        return NULL;
    }
    int length = strlen(string);
    char* reverseString = (char*)malloc(length + 1);

    for (int i = 0; i < length; i++) {
        reverseString[i] = string[length - 1 - i];
    }
    reverseString[length] = '\0';
    return reverseString;
}

char* concat(const char* word1, const char* word2) {
    int length1 = strlen(word1);
    int length2 = strlen(word2);
    int total = length1 + length2 + 1;
    char* combine = (char*)malloc(total); // Changed calloc to malloc
    if (combine == NULL) {
        return NULL;
    }
    strcpy(combine, word1);
    strcat(combine, word2);
    return combine;
}
*//

char* get_input() {
    // Getting input without a set buffer

    char *line = NULL;

    size_t len = 0;

    ssize_t read;

    read = getline(&line, &len, stdin);
    if (read == -1) {
        free(line);
        return NULL;
    }

    return line;
}